<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_borders"
    android:padding="17dp">
<TextView
    android:id="@+id/dialog_improve_title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/dialog_improve_text"
    android:textSize="@dimen/text_size_l"
    android:text="jugador"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/margin_sm"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialog_improve_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_improve_title"
        app:layout_constraintBottom_toTopOf="@+id/dialog_improve_table"
        android:text="quiers mejorar el valor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sm"
        android:padding="@dimen/padding_n"/>
    <Button
        android:visibility="gone"
        android:id="@+id/dialog_improve_follow_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@color/futbolinAzul"
        android:textSize="9dp"
        android:layout_margin="@dimen/margin_sm"
        android:text="@string/follow"/>
<TableLayout
    android:stretchColumns="*"
    android:id="@+id/dialog_improve_table"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/dialog_improve_text"
    app:layout_constraintBottom_toTopOf="@+id/dialog_improve_buttons_table"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin_n"
    android:layout_marginRight="@dimen/margin_n"
    android:paddingRight="@dimen/padding_n"
    android:paddingLeft="@dimen/padding_n"
    android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:id="@+id/dialog_improve_value_label"
                android:layout_margin="@dimen/margin_n"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/player_value"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                />

            <EditText
                android:id="@+id/dialog_improve_value_input"
                android:layout_margin="@dimen/margin_n"
                android:layout_width="0dp"
                android:textSize="12dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="100000" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/dialog_improve_salary_label"
                android:text="@string/salary"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_n"/>
            <TextView
                android:textSize="10dp"
                android:textAlignment="textStart"
                android:id="@+id/dialog_improve_salary_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_n"/>
        </TableRow>
</TableLayout>
    <TableLayout
        android:id="@+id/dialog_improve_buttons_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_n"
        android:layout_marginRight="@dimen/margin_n"
        android:paddingRight="@dimen/padding_n"
        android:paddingLeft="@dimen/padding_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_improve_table"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stretchColumns="*"
        >
        <TableRow>
                <Button
                    android:id="@+id/dialog_improve_accept_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:background="@color/futbolinAzul"
                    android:textSize="9dp"
                    android:layout_margin="@dimen/margin_sm"
                    android:text="@string/accept"/>
                <Button
                    android:id="@+id/dialog_improve_cancel_button"
                    android:layout_width="0dp"
                    android:textSize="9dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/futbolinAzul"
                    android:layout_margin="@dimen/margin_sm"
                   android:text="@string/cancel"/>
        </TableRow>
    </TableLayout>
</LinearLayout>