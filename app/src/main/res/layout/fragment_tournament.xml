<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:id="@+id/fragment_locker_room_scrollview"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <TextView
        android:id="@+id/fragment_tournament_name_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_categories_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/fragment_tournament_session_title"
        android:textSize="25dp"/>
    <Button
        android:id="@+id/fragment_tournament_categories_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_name_label"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_rounds_buttons_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_sm"
        android:text="@string/fragment_tournament_anothers_categories"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:textColor="@android:color/white"
        android:background="@color/futbolinAzul"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/fragment_tournament_rounds_buttons_group_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_categories_button"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_round_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/fragment_tournament_previous_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text=" "
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/fragment_tournament_first_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/fragment_tournament_second_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/fragment_tournament_third_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_gravity="center_vertical" />
        <Button
            android:id="@+id/fragment_tournament_fourth_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_gravity="center_vertical" />
        <Button
            android:id="@+id/fragment_tournament_fifth_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_gravity="center_vertical" />
        <Button
            android:id="@+id/fragment_tournament_next_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="10dp"

            android:layout_height="wrap_content"
            android:text="#>"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <TextView
        android:id="@+id/fragment_tournament_round_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_rounds_buttons_group_layout"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_round_date"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/fragment_tournament_round_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_round_label"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_round_table"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:id="@+id/fragment_tournament_round_table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_round_date"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_classif_buttons_group_layout"
        android:stretchColumns="*"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#333333"
                    android:text="@string/fragment_tournament_local_team"
                    android:layout_span="2"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textAlignment="center"/>
                <TextView
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#333333"
                    android:text="@string/fragment_tournament_visiting_team"
                    android:layout_span="2"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textAlignment="center"/>
                <TextView
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:background="#333333"
                    android:text=" "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="10dp"
                    android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_sm"
        android:id="@+id/fragment_tournament_classif_buttons_group_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_round_table"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_classif_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:weightSum="3"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/fragment_tournament_classif_points_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/fragment_tournament_points"

            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/fragment_tournament__classif_matchs_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/fragment_tournament_matches"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/fragment_tournament_classif_goals_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="@string/fragment_tournament_goals"
            android:layout_gravity="center_vertical" />

    </LinearLayout>
    <TableLayout
        android:id="@+id/fragment_tournament_classif_table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_classif_buttons_group_layout"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_scorers_label"
        android:stretchColumns="*"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow

            android:background="#333333"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/fragment_tournament_position"
                android:tag="fix"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"

                android:text=" "
                android:tag="fix"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_team"
                android:tag="fix"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_points_caps"
                android:tag="points"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="textEnd"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_matches_played"
                android:tag="matchs"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_matches_won"
                android:tag="matchs"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_matches_drawn"
                android:tag="matchs"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_matches_lost"
                android:tag="matchs"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_goals_in_favor"
                android:tag="goals"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_goals_against"
                android:tag="goals"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_goals_difference"
                android:tag="goals"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/fragment_tournament_scorers_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_classif_table"
        app:layout_constraintBottom_toTopOf="@+id/fragment_tournament_scorers_table"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="@string/fragment_tournament_goalers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TableLayout
        android:id="@+id/fragment_tournament_scorers_table"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_tournament_scorers_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:stretchColumns="*"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_players"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_team_caps"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="#333333"
                android:text="@string/fragment_tournament_goals_cap"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="10dp"
                android:textAlignment="center"/>
        </TableRow>
    </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>