<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content"
    android:background="@drawable/adapter_shopping_item_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:textStyle="bold"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="title"
    android:textAlignment="center"
    android:id="@+id/adapter_shopping_item_title"
    app:layout_constraintBottom_toTopOf="@+id/adapter_shopping_item_icon"/>
    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/adapter_shopping_item_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_shopping_item_icon"
        app:layout_constraintBottom_toTopOf="@+id/adapter_shopping_item_description"/>
<TextView
    app:layout_constraintTop_toBottomOf="@+id/adapter_shopping_item_icon"
    android:text="description"
    android:textAlignment="center"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/adapter_shopping_item_description"
    app:layout_constraintBottom_toTopOf="@+id/adapter_shopping_item_price"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@+id/adapter_shopping_item_description"
        android:text="0 FÃºlbos"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/adapter_shopping_item_price"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>